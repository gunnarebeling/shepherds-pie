<div class="modal fade" id="editDeliveryEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="editDeliveryEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDeliveryEmployeeModalLabel">Edit Delivery Employee</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <%= form_with(model: @order, url: order_path(@order), method: :patch, local: true) do |form| %>
                <div class="modal-body">
                    <div class="form-group">
                        <%= form.label :delivery_employee_id, "Delivery Employee", class: "form-label" %>
                        <%= form.collection_select :delivery_employee_id, Employee.all, :id, :name, { include_blank: true }, { class: "form-control" } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"  >Close</button>
                    <%= form.submit 'Save changes', class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>